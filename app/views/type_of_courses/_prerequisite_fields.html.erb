<div class="nested-fields col-12">
  <div class="form-row d-flex flex-row justify-content-center align-items-center">
    <div class="col-12 col-md-3 col-lg-3">
      <%= f.label :dependency_type_of_course_id %>
    </div>
    <div class="col-12 col-md-8 col-lg-8">
      <%= f.select :dependency_type_of_course_id, @type_of_courses.collect{|c| [c.name, c.id]}, {prompt: 'Ningun'}, { class: 'custom-select'} %>
      <%= f.hidden_field :type_of_course_id %>
    </div>
    <div class="col-12 col-md-1 col-lg-1">
      <%= link_to_remove_association  f do |f| %>
        <i class="fas fa-trash"></i>
      <% end %>
    </div>
  </div>
</div>