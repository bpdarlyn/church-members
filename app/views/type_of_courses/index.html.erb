<% content_for :breadcrumb do  %>
  <li class="breadcrumb-item active" aria-current="page">
    Listado de Cursos
  </li>
<% end %>

<div class="d-flex position-absolute" style="bottom: 10%; right: 2%">
  <a  href="<%= new_type_of_course_path %>" class="btn shadow btn-lg bg-dark rounded-pill">
    <i class="fas fa-plus text-white"></i>
  </a>
</div>

<div class="row">
  <div class="col shadow-sm">
    <table
      data-toggle="table"
      data-search="true"
      data-show-refresh="true"
      data-show-toggle="true"
    >
      <thead>
      <tr>
        <th>Código</th>
        <th>Nombre</th>
        <th>Descripción</th>
        <th>Pre-requisios</th>
        <th>Acciones</th>
      </tr>
      </thead>
      <tbody>
      <% @type_of_courses.each do |type_of_course| %>
        <tr>
          <td><%= type_of_course.code %></td>
          <td><%= type_of_course.name %></td>
          <td><%= type_of_course.description %></td>
          <td><%= type_of_course.prerequisite_type_of_courses.map(&:name).join(',') %></td>
          <td>
            <a href="<%= edit_type_of_course_path(type_of_course) %>" class="text-primary" data-toggle="tooltip" data-placement="top" title="Tooltip on top">
              <i class="fas fa-edit"></i>
            </a>
            <%= link_to type_of_course, method: :delete,"title":"Tooltip on top", "data-placement:":"top","data-toggle": "tooltip" ,class: 'text-danger', data: { confirm: 'Are you sure?' }  do %>
              <i class="fas fa-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
