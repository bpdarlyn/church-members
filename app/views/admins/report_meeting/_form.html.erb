<div class="form-row">
  <div class="form-group col-md-6">
    <%= label_tag :person_id %>
    <%= select_tag 'person_id', options_for_select(@people.collect{|c| ["#{c.full_name} (#{c.active_my_title.try(:title_obtained).try(:name)})", c.id]}), { prompt: 'Ninguna' ,style: 'width: 100%',class: 'custom-select js-example-basic-single',"data-link-change-meetings": on_change_select_person_admins_path, "data-type-of-meeting-code": @type_of_meeting.code } %>
  </div>
  <div class="form-group col-md-6" id="content-select-meetings">
    <%= render partial: 'admins/report_meeting/select_meetings', locals: {f: f} %>
  </div>
</div>
<div class="form-row">
  <div class="form-group col-12 col-sm-12 col-md-3">
    <%= f.label :topic %>
    <%= f.text_field :topic , class: 'form-control'%>
  </div>
  <div class="form-group col-12 col-sm-12 col-md-3">
    <%= f.label :attendance_date %>
    <%= f.date_field :attendance_date, class: 'form-control'%>
  </div>
  <div class="form-group col-12 col-sm-12 col-md-3">
    <%= f.label :offerings %>
    <%= f.number_field :offerings , class: 'form-control'%>
  </div>
  <div class="form-group col-12 col-sm-12 col-md-3">
    <%= f.label :prayer %>
    <%= f.text_field :prayer , class: 'form-control'%>
  </div>


</div>